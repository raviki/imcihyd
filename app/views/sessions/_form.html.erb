<%= form_for(:session, url: sessions_path) do |f| %>
				<div class="text-box">
			
				<%= f.text_field :session_login, :placeholder => "Email" %>				
				<%= f.password_field :password, :placeholder => "Password" %>
				</div>

				<%= f.label :remember_me,:class => "checkbox inline center-text" do%>
				<%= f.check_box :remember_me%> Stay Signed In
				<%end%>
				
				<div class="actions">
					<%= f.submit "Sign In", class: "btn btn-info"%>
				</div>

<% end %>

